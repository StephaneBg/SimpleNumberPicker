<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="HardcodedText"
    >


    <TextView
        android:id="@+id/tv_hex_number"
        style="@style/Number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:maxLines="1"
        android:padding="@dimen/snp_margin_padding_size_medium"
        app:autoSizeTextType="uniform"
        app:layout_constraintEnd_toStartOf="@+id/key_backspace"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="123458"
        />

    <ImageButton
        android:id="@+id/key_backspace"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_hex_number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_hex_number"
        tools:layout_editor_absoluteY="15dp"
        tools:src="@drawable/snp_ic_backspace_black_24dp"
        />


    <android.support.v7.widget.GridLayout
        android:id="@+id/keyboard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        app:columnCount="4"
        app:layout_aspectRatio="100%"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_hex_number"
        app:layout_widthPercent="100%"
        app:orientation="vertical"
        app:rowCount="4"
        >

        <TextView
            android:id="@+id/key_1"
            style="@style/Key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1"
            />

        <TextView
            android:id="@+id/key_4"
            style="@style/Key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1"
            />


        <TextView
            android:id="@+id/key_7"
            style="@style/Key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1"
            />

        <TextView
            android:id="@+id/key_sign"
            style="@style/Key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="±"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1"
            />

        <TextView
            android:id="@+id/key_2"
            style="@style/Key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1"
            />

        <TextView
            android:id="@+id/key_5"
            style="@style/Key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1"
            />

        <TextView
            android:id="@+id/key_8"
            style="@style/Key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1"
            />

        <TextView
            android:id="@+id/key_0"
            style="@style/Key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1"
            />

        <TextView
            android:id="@+id/key_3"
            style="@style/Key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1"
            />

        <TextView
            android:id="@+id/key_6"
            style="@style/Key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1"
            />

        <TextView
            android:id="@+id/key_9"
            style="@style/Key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1"
            />

        <TextView
            android:id="@+id/key_point"
            style="@style/Key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1"
            tools:text="."
            />
    </android.support.v7.widget.GridLayout>
</android.support.constraint.ConstraintLayout>
